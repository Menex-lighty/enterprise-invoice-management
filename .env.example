# Invoice Management System - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# For PostgreSQL (Production)
DATABASE_URL=postgresql://username:password@localhost:5432/invoice_system

# For SQLite (Development)
# DATABASE_URL=sqlite:///invoice_system.db

DB_NAME=invoice_system
DB_USER=postgres
DB_PASSWORD=postgres123

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# JWT Secret Key (Generate a secure random key for production)
JWT_SECRET_KEY=your-secret-key-change-in-production-2024

# Flask Secret Key (Generate a secure random key for production)
SECRET_KEY=your-flask-secret-key-change-in-production

# Bcrypt Log Rounds (Higher = more secure but slower)
BCRYPT_LOG_ROUNDS=13

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# Flask Environment (development, staging, production)
FLASK_ENV=development

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# Rate Limiting
RATELIMIT_DEFAULT=100 per hour

# ============================================================================
# FILE STORAGE CONFIGURATION
# ============================================================================
# Upload folder path
UPLOAD_FOLDER=./uploads

# Maximum file size (in bytes) - 16MB default
MAX_CONTENT_LENGTH=16777216

# ============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# ============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/invoice_system.log

# ============================================================================
# PRODUCTION SPECIFIC
# ============================================================================
# Set to True in production
SSL_REQUIRED=False

# Database connection pool settings (for production)
DB_POOL_SIZE=10
DB_POOL_RECYCLE=120
DB_POOL_PRE_PING=True
